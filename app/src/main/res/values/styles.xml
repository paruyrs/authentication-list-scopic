<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintEnabled">true</item>
        <item name="expandedHintEnabled">false</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="boxStrokeErrorColor">@color/edit_text_error_color</item>
        <item name="boxStrokeWidthFocused">@dimen/edit_text_stroke_border_size</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/edit_text_error_color</item>
        <item name="android:textSize">@dimen/edit_text_error_message_font_size</item>
    </style>

    <style name="ScopicTask.TextInputEditText" parent="">
        <item name="android:paddingStart">@dimen/input_text_start_end_padding</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>